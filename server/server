const express = require("express");

const cors = require("cors");

const PORT = 3006;
const app = express();


// CORS Configuration
/* app.use(
  cors({
    origin: function (origin, callback) {
      const allowedOrigins = ["http://localhost:5173", "http://localhost:5174"];
      if (!origin || allowedOrigins.indexOf(origin) !== -1) {
        callback(null, true);
      } else {
